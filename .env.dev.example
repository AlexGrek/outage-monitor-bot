# Development Environment Configuration
# This is a quick-start example for local development

# Telegram Bot Configuration
TELEGRAM_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz-YOUR-TOKEN-HERE

# Database Configuration
DB_PATH=data/state.db

# Monitoring Configuration
PING_COUNT=3
PING_TIMEOUT=5s
HTTP_TIMEOUT=10s
DEFAULT_CHECK_INTERVAL=30s

# Data Retention
METRICS_RETENTION=720h  # 30 days

# REST API Configuration
API_ENABLED=true
API_PORT=8080
# Generate with: openssl rand -hex 32
API_KEY=dev1234567890abcdef1234567890abcdef1234567890abcdef1234567890ab

# Auto-Restart Configuration
AUTO_RESTART_ENABLED=true
AUTO_RESTART_DELAY=30s
AUTO_RESTART_MAX_ATTEMPTS=0
AUTO_RESTART_BACKOFF_MULTIPLIER=2.0
AUTO_RESTART_MAX_DELAY=5m

# Optional: Restrict to specific users (comma-separated Telegram user IDs)
# Leave empty to allow all users
ALLOWED_USERS=
